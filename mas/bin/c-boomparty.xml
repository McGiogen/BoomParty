<project name ="c-boomparty" basedir=".." default="run">
    <import file="boomparty.xml"/>

    <target name="user-init">
        <!-- add here all your custom initialisation -->
    </target>

    <target name="user-end">
        <!-- add here all your custom termination -->
    </target>

    <!-- you can also "override" other tasks from build.xml -->
    
    <!-- override of run task, now it opens the remote debugging on port 5432 -->
    <target name="run" depends="compile" >
        <echo message="Running project ${ant.project.name}" />
        <echo message="Remote debugging available at localhost:5432" />
        <java classname="jason.infra.jade.RunJadeMAS"
              failonerror="true" fork="yes" dir="${basedir}" >
            <classpath refid="project.classpath"/>
            <arg line="${mas2j.project.file} ${debug} "/>
            <!-- jvmarg line="-Xmx500M -Xss8M"/ -->
        	<jvmarg line="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5432" />
        </java>
        <antcall target="user-end" />
    </target>
</project>
